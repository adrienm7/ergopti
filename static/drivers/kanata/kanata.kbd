(defcfg
  process-unmapped-keys yes
)
(defsrc
  caps grv         i
              j    k    l
  lsft lctl lalt ralt rctl
)
(deflayer default
  @cap @grv        _
              _    _    _
  (multi lctl o) (multi lctl h) bspc tab _
)
(deflayer arrows
  _    _           up
              left down rght
  _    _    _    _ _
)
(defalias
  cap (tap-hold-press 200 200 caps lctl)
  grv (tap-hold-press 200 200 grv (layer-toggle arrows))
)

