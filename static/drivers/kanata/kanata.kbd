;; === Configuration ===
(defcfg
  process-unmapped-keys yes
)

;; === Physical key source ===
(defsrc
  caps grv         i
              j    k    l
  lsft lctl lalt ralt
)

;; === Default layer ===
(deflayer default
  @cap @grv        _
              _    _    _
  @lsft @lctl @lalt @ralt
)

;; === Arrows layer ===
(deflayer arrows
  _    _           up
              left down rght
  _    _    _    _
)

;; === Ergopti â†’ QWERTY mapping ===
(defalias
  c o
  v h
)

;; === Functions and shortcuts ===
(defalias
  copy (multi lctl @c)
  paste (multi lctl @v)
  cap (tap-hold-press 200 200 enter lctl)
  grv (tap-hold-press 200 200 grv (layer-toggle arrows))
  lalt (tap-hold-press 200 200 bspc lalt)
  ralt (tap-hold-press 200 200 (multi (release-key lctl) (release-key lalt) tab) ralt)
  lsft (tap-hold-press 200 200 @copy lsft)
  lctl (tap-hold-press 200 200 @paste lctl)
)
